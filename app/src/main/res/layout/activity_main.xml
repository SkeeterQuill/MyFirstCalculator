<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonBackspace"
        android:layout_width="75dp"
        android:layout_height="71dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:onClick="btn_Backspace"
        android:text="Back"
        app:layout_constraintBottom_toTopOf="@+id/buttonNo7"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonClear"
        android:layout_width="75dp"
        android:layout_height="71dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#F30808"
        android:onClick="btn_Clear"
        android:text="C"

        app:layout_constraintBottom_toTopOf="@+id/buttonBackspace"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonMultiply"
        android:layout_width="75dp"
        android:layout_height="71dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:onClick="btn_Multiply"
        android:text="*"
        app:layout_constraintBottom_toTopOf="@+id/buttonNo8"
        app:layout_constraintStart_toEndOf="@+id/buttonBackspace" />

    <Button
        android:id="@+id/buttonDivide"
        android:layout_width="75dp"
        android:layout_height="71dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:onClick="btn_Divide"
        android:text="/"
        app:layout_constraintBottom_toTopOf="@+id/buttonNo9"
        app:layout_constraintStart_toEndOf="@+id/buttonMultiply" />

    <TextView
        android:id="@+id/calculationView"
        android:layout_width="386dp"
        android:layout_height="27dp"
        android:text=""
        android:textAlignment="viewEnd"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022" />

    <TextView
        android:id="@+id/mainView"
        android:layout_width="392dp"
        android:layout_height="69dp"
        android:text="0"
        android:textAlignment="textEnd"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calculationView" />

    <Button
        android:id="@+id/buttonDecimal"
        android:layout_width="75dp"
        android:layout_height="71dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="44dp"
        android:onClick="btn_Decimal"
        android:text="."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonNo0" />

    <Button
        android:id="@+id/buttonNo4"
        android:layout_width="75dp"
        android:layout_height="71dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:onClick="btn_4"
        android:text="4"
        app:layout_constraintBottom_toTopOf="@+id/buttonNo1"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonNo8"
        android:layout_width="75dp"
        android:layout_height="71dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:onClick="btn_8"
        android:text="8"
        app:layout_constraintBottom_toTopOf="@+id/buttonNo5"
        app:layout_constraintStart_toEndOf="@+id/buttonNo7" />

    <Button
        android:id="@+id/buttonNo5"
        android:layout_width="75dp"
        android:layout_height="71dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:onClick="btn_5"
        android:text="5"
        app:layout_constraintBottom_toTopOf="@+id/buttonNo2"
        app:layout_constraintStart_toEndOf="@+id/buttonNo4" />

    <Button
        android:id="@+id/buttonNo2"
        android:layout_width="75dp"
        android:layout_height="71dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:onClick="btn_2"
        android:text="2"
        app:layout_constraintBottom_toTopOf="@+id/buttonNo0"
        app:layout_constraintStart_toEndOf="@+id/buttonNo1" />

    <Button
        android:id="@+id/buttonNo0"
        android:layout_width="75dp"
        android:layout_height="71dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="44dp"
        android:onClick="btn_0"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonNegate" />

    <Button
        android:id="@+id/buttonNegate"
        android:layout_width="75dp"
        android:layout_height="71dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="44dp"
        android:onClick="btn_Negate"
        android:text="+/-"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonNo1"
        android:layout_width="75dp"
        android:layout_height="71dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:onClick="btn_1"
        android:text="1"
        app:layout_constraintBottom_toTopOf="@+id/buttonNegate"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonNo6"
        android:layout_width="75dp"
        android:layout_height="71dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:onClick="btn_6"
        android:text="6"
        app:layout_constraintBottom_toTopOf="@+id/buttonNo3"
        app:layout_constraintStart_toEndOf="@+id/buttonNo5" />

    <Button
        android:id="@+id/buttonNo9"
        android:layout_width="75dp"
        android:layout_height="71dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:onClick="btn_9"
        android:text="9"
        app:layout_constraintBottom_toTopOf="@+id/buttonNo6"
        app:layout_constraintStart_toEndOf="@+id/buttonNo8" />

    <Button
        android:id="@+id/buttonNo3"
        android:layout_width="75dp"
        android:layout_height="71dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:onClick="btn_3"
        android:text="3"
        app:layout_constraintBottom_toTopOf="@+id/buttonDecimal"
        app:layout_constraintStart_toEndOf="@+id/buttonNo2" />

    <Button
        android:id="@+id/buttonNo7"
        android:layout_width="75dp"
        android:layout_height="71dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:onClick="btn_7"
        android:text="7"
        app:layout_constraintBottom_toTopOf="@+id/buttonNo4"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonPlus"
        android:layout_width="75dp"
        android:layout_height="164dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="20dp"
        android:onClick="btn_Addition"
        android:text="+"
        app:layout_constraintBottom_toTopOf="@+id/buttonEquals"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/buttonEquals"
        android:layout_width="75dp"
        android:layout_height="164dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="40dp"
        android:text="="
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/buttonMinus"
        android:layout_width="75dp"
        android:layout_height="71dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="20dp"
        android:onClick="btn_Subtract"
        android:text="-"
        app:layout_constraintBottom_toTopOf="@+id/buttonNo9"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>